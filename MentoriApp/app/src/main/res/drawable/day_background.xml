<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado predeterminado (fondo blanco con borde gris) -->
    <item tools:ignore="StateListReachable">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke android:width="1dp" android:color="@android:color/darker_gray" />
            <corners android:radius="8dp" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <!-- Estado cuando se selecciona (fondo azul claro) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E3F2FD" /> <!-- Azul claro -->
            <stroke android:width="1dp" android:color="#2196F3" /> <!-- Azul fuerte -->
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>
