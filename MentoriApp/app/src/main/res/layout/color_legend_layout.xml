<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center"
    android:id="@+id/legendLayout">

    <!-- Activo -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:id="@+id/viewActivo"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@color/horario_activo"
            android:layout_marginEnd="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activo"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- Inactivo -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:id="@+id/viewInactivo"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@color/horario_inactivo"
            android:layout_marginEnd="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inactivo"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- Conflicto -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:id="@+id/viewConflicto"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@color/horario_conflicto"
            android:layout_marginEnd="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conflicto"
            android:textSize="12sp"/>
    </LinearLayout>
</LinearLayout>