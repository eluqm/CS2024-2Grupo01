<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Mentor.MentorGestionHorarioFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/propone_horario"
            android:fontFamily="@font/merriweather_light"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

    <NumberPicker
        android:id="@+id/number_picker"
        android:layout_width="wrap_content"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:padding="40dp" />


    <!-- Selector de día -->
    <TextView
        android:id="@+id/tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merriweather_light"
        android:text="@string/d_a"
        android:layout_marginTop="16dp"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/radio_group_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_lu"
            android:layout_width="wrap_content"
            android:fontFamily="@font/merriweather_light"
            android:layout_height="wrap_content"
            android:text="Lu" />

        <RadioButton
            android:id="@+id/rb_ma"
            android:layout_width="wrap_content"
            android:fontFamily="@font/merriweather_light"
            android:layout_height="wrap_content"
            android:text="Ma" />

        <RadioButton
            android:id="@+id/rb_mi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweather_light"
            android:text="Mi" />

        <RadioButton
            android:id="@+id/rb_ju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweather_light"
            android:text="Ju" />

        <RadioButton
            android:id="@+id/rb_vi"
            android:layout_width="wrap_content"
            android:fontFamily="@font/merriweather_light"
            android:layout_height="wrap_content"
            android:text="Vi" />
    </RadioGroup>

    <!-- Botón Proponer Horario -->
    <Button
        android:id="@+id/btn_proponer_horario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/merriweather_light"
        android:backgroundTint="@color/selected_item_background"
        android:text="@string/proponer_horario"
        android:textColor="@android:color/white" />
</LinearLayout>