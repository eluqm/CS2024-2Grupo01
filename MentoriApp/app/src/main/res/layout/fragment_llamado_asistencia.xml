<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FFFFFF"
    tools:context=".Mentor.MentorLlamadoAsistenciaFragment">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/merriweather_light"
            android:gravity="center_vertical"
            android:text="Llamado de Asistencia"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="55dp"
        android:orientation="vertical">



        <TextView
            android:fontFamily="@font/merriweather_light"
            android:id="@+id/tv_topic_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/s"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/et_topic"
            android:fontFamily="@font/merriweather_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tema"
            android:padding="8dp"
            android:textSize="16sp"
            android:background="@drawable/border_card" />

        <TextView
            android:id="@+id/tv_description_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/descripci_n"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="@font/merriweather_light"
            android:paddingTop="16dp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/et_description"
            android:fontFamily="@font/merriweather_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/escribe_una_descripci_n"
            android:padding="8dp"
            android:textSize="16sp"
            android:background="@drawable/border_card"
            android:minLines="3"
            android:gravity="top"
            android:inputType="textMultiLine" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_mentees_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:fontFamily="@font/merriweather_light"
                android:text="@string/lista_de_mentoriados"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:foregroundGravity="right"
                android:src="@drawable/baseline_photo_camera_24" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_checkboxes"
            android:layout_width="match_parent"
            android:layout_height="354dp"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:fontFamily="@font/merriweather_light">
        </LinearLayout>
        <Button
            android:id="@+id/btn_close_attendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cerrar_asistencia"
            android:backgroundTint="@color/selected_item_background"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/merriweather_light"
            android:padding="12dp"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</FrameLayout>

