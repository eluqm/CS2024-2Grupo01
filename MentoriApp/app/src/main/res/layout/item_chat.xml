<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Nombre del Emisor -->
        <TextView
            android:id="@+id/txt_emisor_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emisor"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="17sp"
            android:layout_marginBottom="4dp" />

        <!-- Contenedor horizontal para el mensaje, fecha y hora -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Mensaje enviado -->
            <TextView
                android:id="@+id/txt_mensaje_chat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Este es un mensaje de prueba"
                android:textSize="16sp"
                android:textColor="#333333"
                android:background="#EFEFEF"
                android:padding="8dp"
                android:layout_marginEnd="8dp" />


        </LinearLayout>

        <!-- Contenedor para fecha y hora -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <!-- Hora del mensaje -->
            <TextView
                android:id="@+id/txt_hora_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="12:34 PM"
                android:textColor="#757575"
                android:layout_marginEnd="5dp"
                android:textSize="12sp" />

            <!-- Fecha del mensaje -->
            <TextView
                android:id="@+id/txt_fecha_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="2024-11-17"
                android:textColor="#757575"
                android:textSize="12sp" />


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
