<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Nombre del Emisor -->
        <TextView
            android:id="@+id/txt_emisor_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/baloo_bhaina"
            android:text="Emisor"
            android:textColor="#0A3D6F"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Mensaje -->
        <TextView
            android:id="@+id/txt_mensaje_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anonymous_pro"
            android:padding="2dp"
            android:text="Este es un mensaje de prueba"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="italic" />

        <!-- Hora y Fecha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_hora_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:34 PM"
                android:textColor="#757575"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_fecha_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="2024-11-17"
                android:textColor="#757575"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
