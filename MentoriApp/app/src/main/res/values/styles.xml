<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomAlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/principal_spinner</item>
        <item name="android:background">@drawable/dialog_background</item>
    </style>

    <style name="CustomSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/spinner_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:popupBackground">@color/spinner_popup_background</item>
    </style>


</resources>